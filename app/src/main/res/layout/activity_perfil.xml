<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout"
    android:background="@color/white"
    tools:context=".Perfil">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="50dp"
                android:id="@+id/profile_image"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/stroke_img"
                android:layout_gravity="center"
                app:civ_border_width="2dp"
                app:civ_border_color="#1FB5F8"/>

                <TextView
                    android:id="@+id/id_email"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotu"
                    android:text="email"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="18sp" />
            
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/id_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:fontFamily="@font/gotu"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:text="nombre" />




                <androidx.cardview.widget.CardView
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:backgroundTint="#D5F2FF"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:fontFamily="@font/gotu"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Teléfono: " />

                        <TextView
                            android:id="@+id/id_tel"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:fontFamily="@font/gotu"
                            android:textColor="@color/black"
                            android:text="telefono" />

                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:fontFamily="@font/gotu"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:text="Domicilio: " />

                            <TextView
                                android:id="@+id/id_domicilio"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:fontFamily="@font/gotu"
                                android:textColor="@color/black"
                                android:text="domicilio" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:fontFamily="@font/gotu"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Consultorio: " />

                        <TextView
                            android:id="@+id/id_consultorio"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:fontFamily="@font/gotu"
                            android:textColor="@color/black"
                            android:text="consultorio" />

                    </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/gotu"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Número de cédula: " />

                <TextView
                    android:id="@+id/id_cedula"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/gotu"
                    android:textColor="@color/black"
                    android:text="cedula" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/gotu"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Cobro máximo: " />

                <TextView
                    android:id="@+id/id_pagomax"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/gotu"
                    android:textColor="@color/black"
                    android:text="pago max" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/gotu"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Cobro mínimo: " />

                <TextView
                    android:id="@+id/id_pagomin"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/gotu"
                    android:textColor="@color/black"
                    android:text="pago min" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/gotu"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Rango: " />

                <TextView
                    android:id="@+id/id_rango"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/gotu"
                    android:textColor="@color/black"
                    android:text="rango" />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
            android:background="#8CD3F3"
            android:id="@+id/navigation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/drawer_menu"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            >

        </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>