<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AgendarCita">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agendar Cita"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center"
            />

        <EditText
            android:layout_marginTop="80dp"
            android:id="@+id/fechaAgendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="fecha y hora"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:layout_gravity="center"

            />

        <Spinner
            android:id="@+id/selectspin"
            android:layout_marginTop="30dp"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/azulo"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/IDAgendar"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="ID"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center"

            />
        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/domicilioAgendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="domicilio: Calle/nÃºmero/Colonia"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:layout_gravity="center"
            />

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/modalidadAgendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="modalidad: 'domicilio/consultorio'"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:layout_gravity="center"
            />

        <Button
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/btnagendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agendar"
            android:backgroundTint="@color/azulito"

            />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>